#!/bin/bash
#SBATCH --job-name=ET_ChIP_Heatmap
#SBATCH --partition=batch
#SBATCH --mail-type=ALL
#SBATCH --mail-user=evt82290@uga.edu
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=24
#SBATCH --mem=50gb
#SBATCH --time=3:00:00
#SBATCH --output=../HeatMap.%j.out
#SBATCH --error=../HeatMap.%j.err

OUTDIR="/scratch/evt82290/Run133"

conda install -c bioconda deeptools

computeMatrix reference-point --referencePoint TSS -b 1500 -a 1500 -S 133-32_ChIP_cac-1_H3K27me3_4hr_Rep1_S30_L001_R1_001_val_1.fq.gz.bin_25.smooth_75.bw 133-36_ChIP_cac-1_H3K27me3_8hr_Rep1_S34_L001_R1_001_val_1.fq.gz.bin_25.smooth_75.bw 133-40_ChIP_cac-1_H3K27me3_17hr_Rep1_S37_L001_R1_001_val_1.fq.gz.bin_25.smooth_75.bw -R heatmapPRC2genes.bed --skipZeros -o matrix_PRC2.gz

plotHeatmap -m matrix_PRC2.gz -out cacheatmapPRC2_H3K27me2me3_Run131_hclust.png --samplesLabel cac-14hr cac-18hr cac-117hr cac-124hr --hclust --colorMap bwr
